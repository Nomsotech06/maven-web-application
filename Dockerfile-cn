# Stage 1: Build the application using Maven and Java 11
FROM maven:3.8.5-openjdk-11 AS build
WORKDIR /app

# Copy the pom.xml and source code
COPY pom.xml .
COPY src ./src

# Build the WAR file (skipping tests for speed)
RUN mvn clean package -DskipTests

# Stage 2: Deploy the WAR file to Tomcat
FROM tomcat:9.0-jdk11-openjdk-slim

# Remove default Tomcat apps to keep it clean (optional)
RUN rm -rf /usr/local/tomcat/webapps/*

# Copy the WAR file from the build stage to the Tomcat webapps folder
# Replace 'maven-web-application.war' with your actual artifact name
COPY --from=build /app/target/*.war /usr/local/tomcat/webapps/ROOT.war

EXPOSE 8080
CMD ["catalina.sh", "run"]
